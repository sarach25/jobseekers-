{% extends "MyAppUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block contenu %}


    {% if error %}
        <div xmlns="http://www.w3.org/1999/html">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">User Name</label>
            <div class="col-sm-16">
                <input type="text" class="form-control" id="username" name="_username" placeholder="User Name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Password</label>
            <div class="col-sm-16">
                <input type="password" class="form-control" id="password" name="_password" placeholder="Password" required="required">

            </div>

        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"  id="remember_me" name="_remember_me" value="on" />
                        Remember me
                     </label>
                </div>
                <button type="submit" class="btn btn-default">Sign in</button><br>
                <a align="" href="{{ path('security_signup') }}">Sign up</a>
            </div>
        </div>



        <div class="form-group">


            <div class="row">












            </div></div>
        </div>



    </form>
{% endblock contenu %}