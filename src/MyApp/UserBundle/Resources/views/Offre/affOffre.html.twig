{% extends "MyAppUserBundle::layout10.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block contenu %}
    <head>

        <link href="{{ asset('MyApp/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('MyApp/css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('MyApp/css/style3.css') }}" rel="stylesheet">
        <link href="{{ asset('MyApp/css/style5.css') }}" rel="stylesheet">
        <link rel="stylesheet" href=""{{ asset('https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css') }}">
        <style>


            h4 {
                color: grey;
            }
        </style>

    </head>
    <form>
        <div>

        {% for m in offre %}


        <div >

<div>
            <div class="media">



{% if en[m.id] is not null %}
                    <h4 class="media-heading"><a href="Page/{{ en[m.id].id}}"> {{ m.nomentreprise}}</a></h4>
    {% else  %}
        <h4 class="media-heading"><a href="#"> {{ m.nomentreprise}}</a></h4>
        {% endif %}
                  <p>     <p> Poste : <td >{{ m.poste }}</td></p>
                     <p> Domaine : <td >{{ m.domaine }}</td></p>
                   <p> Contenu: <td >{{ m.contenu }}</td></p> </div>
                </p>
    <div class="container">
<div>
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Postuler</button>




            </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
          <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"> <span class="glyphicon glyphicon-lock"></span>Postuler  un poste à   {{ m.nomentreprise }}
                    </h4>
                </div>


                <div class="modal-body">





                    <div class="input-group input-group-lg">
  <span class="input-group-addon">
    <span class="glyphicon glyphicon-envelope"></span>
  </span>
                        <input class="form-control" type="text" placeholder="Email address">
                    </div>
                    <div class="input-group input-group-lg">
  <span class="input-group-addon">
    <span class="glyphicon-phone"></span>
  </span>
                        <input class="form-control" type="text" placeholder="Entrer votre numéro de téléphone">
                    </div>






                    <div >
                        <h4>  <label for="inputnom" class="col-sm-4 control-label"> CV (facultatif ): </label> </h4>
                        <div >
                            <input type="file"  class="form-control" name="cv" required="required" maxlength="255">
                        </div>

                    </div>



                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-toggle="modal" data-dismiss="modal">Envoyer la candidature</button>

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>

            </div>

        </div>
    </div></div>


    <hr>






</div>



            </div>






        {% endfor %}



            <h1>D'autres entreprises </h1>

            {% for m in others %}



                <div>

                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">

                            <div class="caption">
                                <h4 class="pull-right"> </h4>
                                <h4><a href="Page\{{ m.id }}"> Nom :{{ m.nomentreprise }}</a>
                                </h4>


                                <p> Domaine : {{ m.domaine }}</p>

                                <p> Adresse : {{ m.adresse   }}</p>



                                <p>See more <a target="_blank" href="http://www.bootsnipp.com"> http://bootsnipp.com</a>.</p>
                            </div>

                        </div>
                    </div>
                </div>

            {% endfor %}


        </div>
    </form>


{% endblock contenu %}